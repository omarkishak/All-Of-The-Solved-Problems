#include <iostream>
#include <cmath>
#include <sstream>
using namespace std;

int main(){
    double userInput;
    string userAnswer;

    while(true) {
        cout << "Enter a number: " << '\n';
        cin >> userInput;

        if(userInput > 0) {
            cout << "Number is positive." << endl;
        }

        else if(userInput < 0) {
            cout << "Number is negative." << endl;
        }

        else if(userInput == 0) {
            cout << "number is neutral." << endl;
        }

        cout << "Would you like to enter another number? (yes or no): " << endl;
        cin >> userAnswer;

        if(userAnswer == "no") {
            break;
        }
    }

    return 0;
}
