#include <iostream>
using namespace std;

int main() {
    int mum = 15;
    int count = 0;

    for(int i = 0; num != 0; i++){
        if(num % 2 == 0){
            count ++;
            num = num / 2;
        }
        else if(num % 2 != 0){
            count++;
            num = num - 1;
        }
    }

    return count;
}
